{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@internal/*": [
        "../*"
      ],
      "@internal/design-system/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "extends": "@internal/tsconfig/react-library.json",
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
